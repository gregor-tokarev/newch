rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /threads/{thread} {
      allow update, delete: if request.auth != null && get(/databases/$(database)/documents/tracks/$(thread)).data.creator == request.auth.uid;
      allow read, create: if request.auth != null;
    }

    match /boards/{board} {
        allow read: if request.auth != null;
    }
  }
}
